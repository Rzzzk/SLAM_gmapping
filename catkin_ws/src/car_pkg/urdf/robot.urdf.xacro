<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rz_robot">
  
    <xacro:include filename="$(find car_pkg)/urdf/robot_gazebo.xacro" />
    <xacro:include filename="$(find car_pkg)/urdf/robot.gazebo" />

    <!-- Material : colors -->
    <material name="red">
        <color rgba="1.0 0.0 0.0 1.0"/>
    </material>

    <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
    </material>

    <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
    </material>
    <!-- ################################# -->

    <!-- base link  -->
    <link name="base_footprint" />
    
    <!-- Chassis link -->
    <link name="chassis_link">
        
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="5.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        
        <visual name="chassis_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.6 0.4 0.1"/>
            </geometry>
            <material name="red"/>
        </visual>
        
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.6 0.4 0.1"/>
            </geometry>
        </collision>

    </link>

    <!-- joint :  base link with chassis link -->
    <joint name="joint_name" type="fixed">
        <origin xyz="0.0 0.0 0.125" rpy="0.0 0.0 0.0"/>
        <parent link="base_footprint"/>
        <child link="chassis_link"/>
    </joint>


    <!-- right wheel link -->
    <link name="right_wheel_link">
        
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        
        <visual name="left_wheel_visual">
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="gray"/>
        </visual>
        
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
    
    </link>


    <!-- jont : chassis with left wheel -->
    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="-0.15 -0.225 -0.02" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="right_wheel_link"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <!-- left wheel link -->
    <link name="left_wheel_link">
        
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        
        <visual name="left_wheel_visual">
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="gray"/>
        </visual>
        
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
        </collision>
    
    </link>


    <!-- jont : chassis with right wheel -->
    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="-0.15 0.225 -0.02" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="left_wheel_link"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>


    <!-- caster wheel link -->
    <link name="caster_wheel_link">
        
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        
        <visual name="caster_wheel_visual">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                    <sphere radius="0.04"/>
                </geometry>
            <material name="gray"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
                <geometry>
                <sphere radius="0.04"/>
            </geometry>
        </collision>

    </link>

    <!-- joint : caster wheel whith chassis -->
   <joint name="caster_wheel_joint" type="fixed">
    <origin xyz="0.2 0.0 -0.08" rpy="0.0 0.0 0.0"/>
    <parent link="chassis_link"/>
    <child link="caster_wheel_link"/>
   </joint>


   <!-- lider link -->
   <link name="lidar_link">
    
    <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="0.0"/>
        <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
    
    <visual name="">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <cylinder radius="0.025" length="0.05"/>
        </geometry>
        <material name="blue"/>
    </visual>
    
    <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <cylinder radius="0.1" length="0.05"/>
        </geometry>
    </collision>
   
    </link>

    <!-- joint : lider with chassis -->
    <joint name="lider_joint" type="fixed">
        <origin xyz="0.2 0.0 0.07" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="lidar_link"/>
    </joint>





    
</robot>
